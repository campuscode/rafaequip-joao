<section>
  <h2> Novo Contrato </h2>
  <%= simple_form_for @contract do |f| %>
    <div class="form-group">
      <%= f.input :number, label: 'Número do Contrato' %>
    </div>
    <div class="form-group">
        <%= f.input :request_number, label: 'Número do Pedido' %>
    </div>
    <div class="form-group">
      <%= f.input :customer, label:'Cliente' %>
    </div>
    <div class="form-group">
      <%= f.input :address, label:'Endereço' %>
    </div>
    <div class="form-group">
      <%= f.input :contact, label:'Contato' %>
    </div>
    <div class="form-group">
      <%= f.input :deadline, label:'Prazo' %>
    </div>
    <div class="form-group">
      <%= f.association :equipment, as: :check_boxes %>
    </div>
    <div class="form-group">
      <%= f.input :start_date, label:'Data de Início', as: :string  %>
    </div>
    <div class="form-group">
      <%= f.input :end_date, label:'Data de Término', as: :string %>
    </div>
    <div class="form-group">
      <%= f.input :price, label:'Preço' %>
    </div>
    <div class="form-group">
      <%= f.input :discount, label:'Desconto' %>
    </div>
    <%= f.submit 'Cadastrar Contrato' %>
  <% end %>
</section>
