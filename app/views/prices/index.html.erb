<section>
  <table class='table table-striped  table-bordered table-hover'>
    <caption>Lista de Preços</caption>
    <thead>
      <tr>
        <th>Equipamento</td>
        <th>Período</th>
        <th>Valor</th>
      </tr>
    </thead>
    <tbody>
      <% @prices.each do |price| %>
        <tr>
          <td> <%= price.equipment.name %></td>
          <td> <%= price.rental_period.period %> </td>
          <td> <%= price.amount %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
